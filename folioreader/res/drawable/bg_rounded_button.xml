<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/showcase_white_translucent_50">

    <item
        android:id="@android:id/mask"
        android:height="@dimen/rounded_button_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/showcase_white_translucent_50"/>
            <corners
                android:bottomRightRadius="@dimen/rounded_button_corner_radius"
                android:bottomLeftRadius="@dimen/rounded_button_corner_radius"
                android:topLeftRadius="@dimen/rounded_button_corner_radius"
                android:topRightRadius="@dimen/rounded_button_corner_radius"/>
        </shape>
    </item>
    <item
        android:height="@dimen/rounded_button_height">
        <shape android:shape="rectangle">
            <solid android:color="@color/showcase_accent"/>
            <corners
                android:bottomRightRadius="@dimen/rounded_button_corner_radius"
                android:bottomLeftRadius="@dimen/rounded_button_corner_radius"
                android:topLeftRadius="@dimen/rounded_button_corner_radius"
                android:topRightRadius="@dimen/rounded_button_corner_radius"/>
        </shape>
    </item>
</ripple>